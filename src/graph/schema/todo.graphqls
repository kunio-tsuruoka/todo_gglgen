# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id:Int! 
  title: String!
  desc: String!
}

type Query {
  todo(id: Int!): Todo!
  todos: [Todo!]!
}

input NewTodo {
  title: String!
  desc: String!
}

input DeleteTodo {
  id: Int!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  deleteTodo(input: DeleteTodo!): Todo!
}
