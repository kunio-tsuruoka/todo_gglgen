# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  title: String!
  desc: String!
}

type Query {
  todo(id: ID!): Todo!
  todos: [Todo!]!
}

input NewTodo {
  title: String!
  desc: String!
}

input DeleteTodo {
  id: ID!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
